<% unless @event.songs.empty? %>
  <table class="table table-hover">
    <thead>
    <tr>
      <th>Title</th>
      <th>Artist</th>
    </tr>
    </thead>
    <tbody>
      <% @event.songs.each do |song| %>
        <tr>
          <td>
            <%= song.title %>
          </td>
          <td>
            <%= song.artist %>
          </td>
          <td>
            <%= link_to "Details", song %>
          </td>
          <td>
          <%= link_to 'Remove', @event, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>There are no songs currently scheduled for this event</p>
<% end %>
